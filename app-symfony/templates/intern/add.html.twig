{% extends 'base.html.twig' %}

{% block title %}Créer un stagiaire{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto bg-white p-8 shadow-md rounded-lg space-y-6">
    <h1 class="text-3xl font-bold text-[#3B4C66]">➕ Nouveau Stagiaire</h1>

    {{ form_start(form) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {% for field in [form.interName, form.internSex, form.internCity, form.internCp, form.internAdress, form.internBirth, form.internEmail] %}
                <div>
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(field, {'attr': {
                        'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-[#3B4C66] focus:ring-[#3B4C66] p-2'
                    }}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}
        </div>

        <div class="pt-6">
            <button type="submit" class="bg-[#3B4C66] hover:bg-[#4F627E] text-white font-semibold py-2 px-6 rounded transition">
                Enregistrer
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
