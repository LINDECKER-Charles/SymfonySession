{% extends 'base.html.twig' %}

{% block title %}Créer une session{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto p-6 bg-white shadow rounded">
    <h1 class="text-2xl font-bold text-[#3B4C66] mb-6">➕ Créer une session</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4">
        {% for error in form.vars.errors %}
        <p>{{ error.message }}</p>
        {% endfor %}
    </div>




    <div class="space-y-4">
        {{ form_row(form.sessionName, {
            label: 'Nom Session',
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#3B4C66]' },
            label_attr: { class: 'block mb-1 text-sm font-medium text-gray-700' }
        }) }}

        {{ form_row(form.startDate, {
            label: 'Date de début',
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#3B4C66]' },
            label_attr: { class: 'block mb-1 text-sm font-medium text-gray-700' }
        }) }}

        {{ form_row(form.endDate, {
            label: 'Date de fin',
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#3B4C66]' },
            label_attr: { class: 'block mb-1 text-sm font-medium text-gray-700' }
        }) }}

        {{ form_row(form.nbPlaceTt, {
            label: 'Nombre place total',
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#3B4C66]' },
            label_attr: { class: 'block mb-1 text-sm font-medium text-gray-700' }
        }) }}

        {{ form_row(form.nbPlaceReserved, {
            label: 'Nombre place réservé',
            attr: { class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#3B4C66]' },
            label_attr: { class: 'block mb-1 text-sm font-medium text-gray-700' }
        }) }}
    </div>

    <button class="mt-6 px-6 py-2 bg-[#3B4C66] text-white rounded hover:bg-[#2c3b52] transition">Créer</button>
    {{ form_end(form) }}
</div>
{% endblock %}