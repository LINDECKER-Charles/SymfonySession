{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block content %}
<div class="p-8">
  <h1 class="text-2xl font-bold text-[#3B4C66] mb-6">📚 Modules</h1>

  <div class="overflow-x-auto overflow-y-auto max-h-[60vh]">
    <table class="min-w-full bg-white border shadow rounded">
      <thead class="bg-[#3B4C66] text-white sticky top-0 z-10">
        <tr>
          <th class="text-left px-4 py-2">📌 Nom</th>
          <th class="text-left px-4 py-2">🗂️ Catégorie</th>
        </tr>
      </thead>
      <tbody>
        {% for module in modules %}
          <tr class="border-t">
            <td class="px-4 py-2"><a href="{{ path('detail_module', {'id': module.id}) }}" class="text-[#3B4C66] font-semibold hover:underline hover:text-[#4F627E] transition">{{ module.mudleName }}</a></td>
            <td class="px-4 py-2"><a href="{{ path('detail_category', {'id': module.moduleCategory.id}) }}" class="text-[#3B4C66] font-semibold hover:underline hover:text-[#4F627E] transition">{{ module.moduleCategory.categoryName }}</a></td>
          </tr>
        {% else %}
          <tr>
            <td colspan="2" class="px-4 py-2 text-gray-500">Aucun module trouvé.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
